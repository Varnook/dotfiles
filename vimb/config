# Homepage
set home-page=file:///home/syx/.config/vimb/homepage/index.html

# Download directory
set download-path=~/Downloads

# Hide input
set input-autohide=true

# Spell checking
set spell-checking=true
set spell-checking-languages=en,es

# Shortcuts
shortcut-add searx=https://searx.info/?q=$0

# Default search
shortcut-default searx

set dark-mode=true

# Font
set font-size=20

# Scripts
set scripts=false

# Automatic Commands
autocmd LoadStarting https://web.whatsapp.com/ :set user-agent=googlebot|:set scripts=true
autocmd LoadStarting https://app.slack.com/* :set scripts=true

# Keybinds
nmap b :set scripts=true|:no R <CR><Esc>
nmap <C-B> :set scripts=false|:no R <CR><Esc>
