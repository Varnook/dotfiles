# Homepage
set home-page=file:///user/home/.config/vimb/homepage/index.html

# Download directory
set download-path=~/Downloads

# Hide input
set input-autohide=true

# Spell checking
set spell-checking=true
set spell-checking-languages=en,es

# Shortcuts
shortcut-add searx=https://searx.info/?q=$0

# Default search
shortcut-default searx

set dark-mode=true

# Font
set font-size=20

# User agent
#set user-agent=googlebot
autocmd LoadStarting https://web.whatsapp.com/ :set user-agent=googlebot

