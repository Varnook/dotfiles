# Homepage
set home-page=.config/vimb/homepage/index.html

# Download directory
set download-path=~/Downloads

# Hide input
set input-autohide=true

# Spell checking
set spell-checking=true
set spell-checking-languages=en,es

# Shortcuts
shortcut-add searx=https://searx.info/?q=$0

# Default search
shortcut-default searx

# Zoom
set default-zoom=120

set dark-mode=true

# Keybinds
nmap b :sh! sh ${HOME}/.bashscripts/openMpv % <CR>


augroup mygroup
autocmd LoadCommitted http{s,}://www.youtube.com/watch?v=* no b
autocmd DownloadFinished *.pdf :sh! sh ${HOME}/.bashscripts/openApvlv <CR>
augroup end
